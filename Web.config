<configuration>
  <appSettings>
    <!-- 
	DOC:SETTING AN XSLT PARAMETER
	  To pass a parameter key name and value to the transformation process,
	  simply add a key name and value using the "add" element as outlined below.
	  The key name should use the prefix "xsltParam_".  When the transformation file
	  is compiled, the name of the parameter will be set to what follows after
	  "xsltParam_".  So, for example the value of "xsltParam_base" will be passed 
	  into the transformation file with the parameter name "base".  If you would like
	  to use a prefix other than "xsltParam_", uncomment the "xsltParamKeyPrefix" key
	  and change its value to the prefered prefix.
	/DOC:SETTING AN XSLT PARAMETER 
  	-->
    <!--
      <add key="xsltParamKeyPrefix" value="xsltParam_" />
    -->
    <add key="xsltParam_xml.base" value="http://home.nuxleus.com:9999/"/>
    <!-- 
      NOTE:  http://home.nuxleus.com:9999/ will resolve to 127.0.0.1, or in other words, localhost.  
                    Amongst other things, this allows the ability to use the Google Map key that matches 
                    this domain on a local running instance.  It is recommended, however, that you get your 
                    own key and map it a sub-domains A record of a domain you maintain control over, as if this
                    key gains more use than is allowed, it will no longer work.  At the moment, this is a temporary 
                    workaround such that the dev team can test map functionality locally.  It will be replaced by a more
                    dynamic/permanent solution in the future.  If you are not a member of the development team 
                    for this project, to avoid any future issues, please vist http://www.google.com/apis/maps/ to register
                    for your own key.   Thanks!
      /NOTE
    -->
    <add key="xsltParam_google.maps.key"
      value="ABQIAAAAEPQGOws5xNa--1d-oQQDjhRkcW4P38Vlgv8rAAfXgDf8epU8WhRx4xBys1LmX0u9lAvN21H9_vH8wA"/>
    <add key="baseTemplate" value="/repository/xslt/base.xslt"/>
    <add key="WSGIReloadIronPython" value="False"/>
    <add key="WSGIApplicationModule" value="appsite"/>
    <add key="WSGIApplication" value="app"/>
    <!-- 
      NOTE: remember to upate appsite.py an appstore.conf when you change this value 
    -->
    <add key="WSGIApplicationURLPath" value="/"/>
    <add key="MonoServerDefaultIndexFiles"
      value="default.omx,index.xml,index.aspx,default.aspx,index.html"/>
  </appSettings>
  <system.web>
    <httpHandlers>
      <!-- 
        NOTE: WSGI with IronPython instance 
      -->
      <add verb="*" path="/service/**/*" type="WSGIHandler,Xameleon"/>
      <add verb="*" path="/collection/**/*" type="WSGIHandler,Xameleon"/>
      <add verb="GET,HEAD" path="*.xml" type="System.Web.StaticFileHandler"/>
      <add verb="GET,HEAD" path="*.atom" type="System.Web.StaticFileHandler"/>
      <add verb="GET,HEAD" path="*.omx" type="Xameleon.HttpHandler,Xameleon"/>
    </httpHandlers>
    <authentication mode="None"/>
    <customErrors mode="Off"/>
  </system.web>
</configuration>
